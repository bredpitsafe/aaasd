{
    "name": "@backend/bff",
    "version": "0.0.1",
    "description": "BFF",
    "type": "module",
    "author": "@frontend",
    "scripts": {
        "start": "node --enable-source-maps --no-warnings --loader ts-node/esm ./src/index.ts",
        "start_with_coverage": "c8 --clean -r text -r html -r cobertura npm start",
        "build": "webpack",
        "dev": "nodemon ./src/index.ts",
        "types": "tsc --noEmit",
        "lint": "eslint . --ext .ts --quiet",
        "test_unit": "vitest --run ./src/**/*",
        "test": "start-server-and-test http://localhost:8100 test_api",
        "test_api": "vitest --run ./test/*",
        "test_compose": "NODE_ENV=docker docker-compose -f=docker-compose.test.yml up --build",
        "oauth": "NODE_ENV=development docker-compose up oauth"
    },
    "dependencies": {
        "@backend/keycloak": "^0.0.1",
        "@backend/utils": "^1.0.0",
        "@common/rx": "^1.0.0",
        "@common/types": "^1.0.0",
        "@common/utils": "^1.0.0",
        "@grpc-schemas/authorization-api-sdk": "1.240709.0",
        "@grpc-schemas/dashboard_storage-api-sdk": "1.240729.0",
        "@grpc-schemas/instruments-api-sdk": "1.240624.1",
        "@grpc-schemas/trading_data_provider-api-sdk": "1.240801.0",
        "@grpc-schemas/user_settings-api-sdk": "^1.240530.0-dev",
        "@grpc/grpc-js": "^1.9.13",
        "body-parser": "^1.20.2",
        "bottleneck": "^2.19.5",
        "config": "^3.3.10",
        "express": "^4.18.2",
        "express-ws": "^5.0.2",
        "long": "^5.2.3",
        "node-fetch": "^3.3.2",
        "prom-client": "^15.1.0",
        "reflect-metadata": "^0.2.1",
        "toml": "^3.0.0",
        "ts-node": "^10.9.2",
        "tsyringe": "^4.8.0",
        "type-fest": "^4.9.0",
        "winston": "^3.11.0",
        "ws": "^8.11.0"
    },
    "devDependencies": {
        "@backend/oauth-mock-server": "^1.0.0",
        "@types/config": "^3.3.3",
        "@types/express": "^4.17.21",
        "@types/express-ws": "^3.0.4",
        "@types/ws": "^8.5.10",
        "c8": "^9.1.0",
        "mkcert": "^3.2.0",
        "nodemon": "^3.0.2",
        "start-server-and-test": "^2.0.3",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    },
    "private": true
}
