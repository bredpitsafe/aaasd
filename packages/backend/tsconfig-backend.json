{
    "extends": "../../tsconfig-base.json",
    "ts-node": {
        "files": true,
        "esm": true,
        "experimentalResolver": true
    },
    "compilerOptions": {
        "moduleDetection": "force",
        "lib": ["es2023"],
        "types": ["reflect-metadata"],
        "inlineSourceMap": true,
        "importHelpers": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}
